<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.HistoryFragment">

    <LinearLayout
        android:id="@+id/history_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:labelFor="@+id/history_date_view"
            android:text="@string/history_choose_date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:textColor="@color/textColorPrimary"
            android:background="@color/colorPrimary"
            /-->
        <TextView
            android:id="@+id/history_date_view"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_calendar_range"
            android:drawableStart="@drawable/ic_calendar_range"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:textColor="@color/textColorPrimary"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/history_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/history_date_layout">

        <LinearLayout
            android:id="@+id/layout_historic_routine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
